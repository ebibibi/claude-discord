{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git -C /home/ebi/claude-code-discord-bridge config core.hooksPath .githooks 2>/dev/null || true",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file=\"$TOOL_INPUT_file_path$TOOL_INPUT_filePath\"; if [[ \"$file\" == *.py ]]; then cd /home/ebi/claude-code-discord-bridge && uv run ruff format \"$file\" 2>/dev/null; fi",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
